{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lexica.com/schemas/appsettings.json",
  "title": "Lexica configuration",
  "type": "object",
  "properties": {
    "Database": {
      "type": "object",
      "properties": {
        "ConnectionString": {
          "type": "string"
        }
      },
      "required": [
        "ConnectionString"
      ]
    },
    "Words": {
      "type": "object",
      "properties": {
        "DirectoryPath": {
          "type": "string"
        }
      },
      "required": [
        "DirectoryPath"
      ]
    },
    "Maintaining": {
      "type": "object",
      "properties": {
        "ResetAfterMistake": {
          "type": "boolean"
        }
      },
      "required": [
        "ResetAfterMistake"
      ]
    }
  },
  "required": [
    "Database",
    "Words",
    "Maintaining"
  ]
}