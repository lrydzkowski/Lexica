{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lexica.com/schemas/appsettings.json",
  "title": "Lexica configuration",
  "type": "object",
  "properties": {
    "Words": {
      "type": "object",
      "properties": {
        "SetsDirectoryPath": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "SetsDirectoryPath"
      ]
    },
    "Learning": {
      "type": "object",
      "properties": {
        "NumOfOpenQuestions": {
          "type": "integer",
          "minimum": 1
        },
        "ResetAfterMistake": {
          "type": "boolean"
        },
        "PlayPronuncation": {
          "type": "object",
          "properties": {
            "BeforeAnswer": {
              "type": "boolean"
            },
            "AfterAnswer": {
              "type": "boolean"
            }
          },
          "required": [
            "BeforeAnswer",
            "AfterAnswer"
          ]
        },
        "SaveDebugLogs": {
          "type": "boolean"
        }
      },
      "required": [
        "NumOfOpenQuestions",
        "ResetAfterMistake",
        "PlayPronuncation",
        "SaveDebugLogs"
      ]
    },
    "PronunciationApi": {
      "type": "object",
      "properties": {
        "WebDictionary": {
          "type": "object",
          "properties": {
            "Host": {
              "type": "string"
            },
            "UrlPath": {
              "type": "string"
            },
            "DownloadDirectoryPath": {
              "type": "string"
            }
          },
          "required": [
            "Host",
            "UrlPath",
            "DownloadDirectoryPath"
          ]
        }
      },
      "required": [
        "WebDictionary"
      ]
    }
  },
  "required": [
    "Learning"
  ]
}