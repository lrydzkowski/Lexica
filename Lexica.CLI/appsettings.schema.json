{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lexica.com/schemas/appsettings.json",
  "title": "Lexica configuration",
  "type": "object",
  "properties": {
    "Database": {
      "type": "object",
      "properties": {
        "ConnectionString": {
          "type": "string"
        }
      },
      "required": [
        "ConnectionString"
      ]
    },
    "Words": {
      "type": "object",
      "properties": {
        "DirectoryPath": {
          "type": "string"
        }
      },
      "required": [
        "DirectoryPath"
      ]
    },
    "Maintaining": {
      "type": "object",
      "properties": {
        "ResetAfterMistake": {
          "type": "boolean"
        }
      },
      "required": [
        "ResetAfterMistake"
      ]
    },
    "Learning": {
      "type": "object",
      "properties": {
        "NumOfLevels": {
          "type": "integer"
        }
      },
      "required": [
        "NumOfLevels"
      ]
    },
    "Forvo": {
      "type": "object",
      "properties": {
        "Key": {
          "type": "string"
        },
        "Language": {
          "type": "string"
        },
        "Country": {
          "type": "string"
        },
        "Order": {
          "type": "string"
        },
        "Limit": {
          "type": "integer"
        }
      },
      "required": [
        "Key",
        "Language",
        "Country",
        "Order",
        "Limit"
      ]
    }
  },
  "required": [
    "Database",
    "Words",
    "Maintaining",
    "Learning",
    "Forvo"
  ]
}