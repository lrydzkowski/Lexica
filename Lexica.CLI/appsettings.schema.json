{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lexica.com/schemas/appsettings.json",
  "title": "Lexica configuration",
  "type": "object",
  "properties": {
    "Database": {
      "type": "object",
      "properties": {
        "ConnectionString": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "ConnectionString"
      ]
    },
    "Words": {
      "type": "object",
      "properties": {
        "DirectoryPath": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "DirectoryPath"
      ]
    },
    "Maintaining": {
      "type": "object",
      "properties": {
        "ResetAfterMistake": {
          "type": "boolean"
        },
        "PlayPronuncation": {
          "type": "object",
          "properties": {
            "WordsMode": {
              "type": "boolean"
            },
            "TranslationsMode": {
              "type": "boolean"
            }
          },
          "required": [
            "WordsMode",
            "TranslationsMode"
          ]
        }
      },
      "required": [
        "ResetAfterMistake",
        "PlayPronuncation"
      ]
    },
    "Learning": {
      "type": "object",
      "properties": {
        "NumOfLevels": {
          "type": "integer",
          "minimum": 1
        },
        "PlayPronuncation": {
          "type": "object",
          "properties": {
            "WordsMode": {
              "type": "boolean"
            },
            "TranslationsMode": {
              "type": "boolean"
            }
          },
          "required": [
            "WordsMode",
            "TranslationsMode"
          ]
        }
      },
      "required": [
        "NumOfLevels",
        "PlayPronuncation"
      ]
    },
    "PronunciationApi": {
      "type": "object",
      "properties": {
        "Forvo": {
          "type": "object",
          "properties": {
            "Key": {
              "type": "string",
              "minLength": 1
            },
            "Language": {
              "type": "string",
              "minLength": 1
            },
            "Country": {
              "type": "string",
              "minLength": 1
            },
            "Order": {
              "type": "string",
              "minLength": 1
            },
            "Limit": {
              "type": "integer",
              "minimum": 1
            },
            "DownloadTempPath": {
              "type": "string",
              "minimum": 1
            }
          },
          "required": [
            "Key",
            "Language",
            "Country",
            "Order",
            "Limit",
            "DownloadTempPath"
          ]
        },
        "WebDictionary": {
          "type": "object",
          "properties": {
            "Host": {
              "type": "string",
              "minLength": 1
            },
            "UrlPath": {
              "type": "string",
              "minLength": 1
            },
            "DownloadTempPath": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "Host",
            "UrlPath",
            "DownloadTempPath"
          ]
        }
      }
    }
  },
  "required": [
    "Database",
    "Words",
    "Maintaining",
    "Learning"
  ]
}