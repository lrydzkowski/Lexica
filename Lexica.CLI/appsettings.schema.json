{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lexica.com/schemas/appsettings.json",
  "title": "Lexica configuration",
  "type": "object",
  "properties": {
    "Words": {
      "type": "object",
      "properties": {
        "DirectoryPath": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "DirectoryPath"
      ]
    },
    "Learning": {
      "type": "object",
      "properties": {
        "ResetAfterMistake": {
          "type": "boolean"
        },
        "NumOfLevels": {
          "type": "integer",
          "minimum": 1
        },
        "PlayPronuncation": {
          "type": "object",
          "properties": {
            "BeforeAnswer": {
              "type": "boolean"
            },
            "AfterAnswer": {
              "type": "boolean"
            }
          },
          "required": [
            "BeforeAnswer",
            "AfterAnswer"
          ]
        },
        "SaveDebugLogs": {
          "type": "boolean"
        }
      },
      "required": [
        "ResetAfterMistake",
        "NumOfLevels",
        "PlayPronuncation",
        "SaveDebugLogs"
      ]
    },
    "PronunciationApi": {
      "type": "object",
      "properties": {
        "WebDictionary": {
          "type": "object",
          "properties": {
            "Host": {
              "type": "string",
              "minLength": 1
            },
            "UrlPath": {
              "type": "string",
              "minLength": 1
            },
            "DownloadTempPath": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "Host",
            "UrlPath",
            "DownloadTempPath"
          ]
        }
      }
    }
  },
  "required": [
    "Learning"
  ]
}